{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": ".",
    "module": "commonjs",
    "target": "esnext",
    "declaration": true,
    "declarationDir": "typings",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts"
  ]
}
